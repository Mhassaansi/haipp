<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Settings themes -->
    <style name="Theme.SettingsTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@color/primary_color</item>
    </style>

    <style name="Theme.SettingsTheme.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@color/primary_color_dark</item>

        <!-- Dark settings has a special primary dark color-->
        <item name="colorPrimaryDark">@color/secondary_color_settings_dark</item>
    </style>

    <style name="Theme.SettingsTheme.Black" parent="Theme.BlackTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@color/black</item>
    </style>

    <!-- Regular themes -->
    <style name="Theme.LightTheme" parent="Theme.BaseLightTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>

    <style name="Theme.DarkTheme" parent="Theme.BaseDarkTheme">
        <item name="searchBackground">@drawable/card_bg</item>
        <item name="listBackground">?attr/listChoiceBackgroundIndicator</item>
        <item name="progressBackgroundColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/secondary_color</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>




    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Theme.BlackTheme" parent="Theme.BaseBlackTheme">
        <item name="searchBackground">@drawable/card_bg</item>
        <item name="listBackground">?attr/listChoiceBackgroundIndicator</item>
        <item name="progressBackgroundColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>